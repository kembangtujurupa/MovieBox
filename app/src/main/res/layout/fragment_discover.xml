<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Тип:"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_type_movie"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фильмы"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_type_tv"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сериалы"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Сортировка: "
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sort_popular"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Популярные"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sort_date"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата выхода"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sort_revenue"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сборы"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sort_vote_average"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Средняя оценка"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sort_vote_count"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Количество голосов"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Выбор даты выхода:"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_all_years"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Все года"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_one_year"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Один год"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_two_years"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Между годами"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/bg_chip_color"
                    app:rippleColor="@android:color/white" />


            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/min_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="2014" />

                <TextView
                    android:id="@+id/max_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="2019" />
            </LinearLayout>

            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/rsb_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rsb_progress_color="@color/colorAccent"
                app:rsb_tick_mark_in_range_text_color="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Оценка:"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/min_vote_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="0" />

                <TextView
                    android:id="@+id/max_vote_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="10" />
            </LinearLayout>

            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/rsb_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:rsb_mode="range"
                app:rsb_progress_color="@color/colorAccent"
                app:rsb_step_auto_bonding="true"
                app:rsb_step_height="4dp"
                app:rsb_step_radius="4dp"
                app:rsb_step_width="4dp"
                app:rsb_steps="20"
                app:rsb_tick_mark_in_range_text_color="@color/colorAccent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Выбор жанра(ов):"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grid_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:padding="14dp"
                android:paddingTop="60dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>