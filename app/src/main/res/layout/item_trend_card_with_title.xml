<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m_trend_layout"
    android:layout_width="300dp"
    android:layout_height="72dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorExtraLightGray"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/m_trend_rating"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_trend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cc_rubik_one"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                tools:text="example text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_trend_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cc_montserrat_semibold"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    tools:text="2019" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_small_dot" />

                <TextView
                    android:id="@+id/m_trend_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cc_montserrat_semibold"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    tools:text="Фэнтези Экшн" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/m_trend_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_rating_text_view"
            android:fontFamily="@font/cc_montserrat_medium"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            tools:text="74%" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>